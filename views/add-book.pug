extends layout

block content
  h2.text-3xl.font-bold.mb-6.text-center Add a New Book

  .form-wrapper.flex.justify-center
    .form-card(class="bg-white dark:bg-zinc-900 shadow-md rounded-lg p-6")
      form(action="/add-book", method="POST", class="space-y-4")
        input(type="text", name="title", placeholder="Title", required, class="w-full p-2 rounded border dark:bg-zinc-800 dark:border-zinc-700")
        input(type="text", name="author", placeholder="Author", required, class="w-full p-2 rounded border dark:bg-zinc-800 dark:border-zinc-700")
        input(type="text", name="isbn", placeholder="ISBN", required, class="w-full p-2 rounded border dark:bg-zinc-800 dark:border-zinc-700")
        button(type="submit", class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded") Add Book
