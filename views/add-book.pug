doctype html
html
  head
    title Add Book
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")
  body(class="bg-gray-100 min-h-screen text-gray-900")
    .max-w-xl.mx-auto.mt-12.px-4
      h1.text-3xl.font-bold.mb-6.text-center Add a New Book

      form(action="/add-book" method="POST" class="bg-white shadow-md rounded-lg p-6 space-y-4")
        input(type="text" name="isbn" placeholder="ISBN" required class="w-full px-4 py-2 border border-gray-300 rounded-md")
        input(type="text" name="title" placeholder="Title" required class="w-full px-4 py-2 border border-gray-300 rounded-md")
        input(type="text" name="author" placeholder="Author" required class="w-full px-4 py-2 border border-gray-300 rounded-md")

        button(type="submit" class="bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition") Add Book

      .mt-4.text-center
        a(href="/" class="text-blue-600 hover:underline") ‚Üê Back to Book List
