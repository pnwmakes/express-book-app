doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Code & Coffee: James's Library
    link(rel="stylesheet", href="/styles.css")
  body(class="bg-zinc-100 dark:bg-zinc-800 text-zinc-900 dark:text-zinc-100 min-h-screen flex flex-col")

    header(class="bg-zinc-200 dark:bg-zinc-900 shadow-md")
  .container.mx-auto.px-4.py-3
    .flex.items-center.justify-between
      // Site title
      a(href="/", class="text-xl font-bold text-zinc-800 dark:text-zinc-100")
        | ☕ Code & Coffee: James's Library

      // Mobile menu button
      button#menu-btn(type="button", class="sm:hidden text-zinc-800 dark:text-zinc-100 focus:outline-none")
        svg(xmlns="http://www.w3.org/2000/svg", fill="none", viewBox="0 0 24 24", stroke="currentColor", class="w-6 h-6")
          path(stroke-linecap="round", stroke-linejoin="round", stroke-width="2", d="M4 6h16M4 12h16M4 18h16")

    // Shared nav (mobile toggle + desktop visible)
    nav#main-nav(class="mt-3 sm:mt-0 sm:flex gap-4 hidden sm:items-center sm:justify-end")
      a(href="/", class="block text-zinc-700 dark:text-zinc-300 hover:text-blue-500") Home
      a(href="/add-book", class="block text-zinc-700 dark:text-zinc-300 hover:text-green-600") Add Book
      form(action="/seed", method="POST")
        button(type="submit", class="block text-zinc-700 dark:text-zinc-300 hover:text-yellow-500") Re-Seed Library


    main(class="flex-1 container mx-auto px-4 py-6")
      block content

    footer(class="bg-zinc-200 dark:bg-zinc-900 text-center py-4 text-sm text-zinc-600 dark:text-zinc-400")
      | &copy; #{new Date().getFullYear()} ☕ Code & Coffee: James's Library. All rights reserved.

    // Toggle script
    script.
      const btn = document.getElementById('menu-btn');
      const mobileNav = document.getElementById('mobile-nav');
      btn.addEventListener('click', () => {
        mobileNav.classList.toggle('hidden');
      });
