doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Code & Coffee: James's Library
    link(rel="stylesheet", href="/styles.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css")

  body(class="bg-zinc-100 dark:bg-zinc-800 text-zinc-900 dark:text-zinc-100 min-h-screen flex flex-col")

    // Navbar
    header(class="bg-zinc-200 dark:bg-zinc-900 shadow")
          .max-w-7xl.mx-auto.px-4.py-4.flex.justify-between.items-center
            // Larger site title
            h1.text-3xl.font-bold.flex.items-center.gap-2
              | ☕ Code & Coffee: James's Library

            // Larger nav
            nav(class="flex gap-6 items-center text-base font-semibold text-zinc-800 dark:text-zinc-100")
              a(href="/", class="flex items-center gap-1 hover:underline")
                i(class="fa-solid fa-house")
                | Home
              span.text-zinc-400 •

              a(href="/add-book", class="flex items-center gap-1 hover:underline")
                i(class="fa-solid fa-plus")
                | Add Book
              span.text-zinc-400 •

              form(action="/seed", method="POST", class="inline")
                button(type="submit", class="flex items-center gap-1 hover:underline text-inherit bg-transparent border-0 p-0")
                  i(class="fa-solid fa-rotate-left")
                  | Reset Library
              span.text-zinc-400 •

              form(action="/seed-stock", method="POST", class="inline")
                button(type="submit", class="flex items-center gap-1 hover:underline text-inherit bg-transparent border-0 p-0")
                  i(class="fa-solid fa-book")
                  | Add Stock Books



    main(class="max-w-7xl mx-auto px-4 py-6 flex-grow")
      block content

    footer(class="text-center text-xs py-6 text-zinc-500 dark:text-zinc-400")
      | © 2025 ☕ Code & Coffee: James's Library. All rights reserved.
