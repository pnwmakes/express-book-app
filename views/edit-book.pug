extends layout

block content
  if book
    div(class="max-w-2xl mx-auto bg-white dark:bg-zinc-900 shadow-md rounded-lg p-6")

      h2(class="text-2xl font-bold mb-4") Edit Book

      if book.coverUrl
        img(src=book.coverUrl, alt="Book Cover", class="w-32 mb-4 rounded shadow")

      form(action=`/edit-book/${book.isbn}`, method="POST", class="space-y-4")

        label(for="title" class="block font-medium text-zinc-700 dark:text-zinc-300") Title
        input#title(type="text", name="title", value=book.title, placeholder="Title", required, class="w-full p-2 border rounded dark:bg-zinc-800 dark:border-zinc-700")

        label(for="author" class="block font-medium text-zinc-700 dark:text-zinc-300") Author
        input#author(type="text", name="author", value=book.author, placeholder="Author", required, class="w-full p-2 border rounded dark:bg-zinc-800 dark:border-zinc-700")

        label(for="publisher" class="block font-medium text-zinc-700 dark:text-zinc-300") Publisher
        input#publisher(type="text", name="publisher", value=book.publisher, placeholder="Publisher", class="w-full p-2 border rounded dark:bg-zinc-800 dark:border-zinc-700")

        label(for="published" class="block font-medium text-zinc-700 dark:text-zinc-300") Published Date
        input#published(type="date", name="published", value=book.published.toISOString().substring(0, 10), class="w-full p-2 border rounded dark:bg-zinc-800 dark:border-zinc-700")

        label(for="pages" class="block font-medium text-zinc-700 dark:text-zinc-300") Pages
        input#pages(type="number", name="pages", value=book.pages, placeholder="Pages", class="w-full p-2 border rounded dark:bg-zinc-800 dark:border-zinc-700")

        label(for="website" class="block font-medium text-zinc-700 dark:text-zinc-300") Website URL
        input#website(type="url", name="website", value=book.website, placeholder="Website", class="w-full p-2 border rounded dark:bg-zinc-800 dark:border-zinc-700")

        label(for="coverUrl" class="block font-medium text-zinc-700 dark:text-zinc-300") Cover Image URL
        input#coverUrl(type="url", name="coverUrl", value=book.coverUrl, placeholder="Cover URL", class="w-full p-2 border rounded dark:bg-zinc-800 dark:border-zinc-700")

        label(for="description" class="block font-medium text-zinc-700 dark:text-zinc-300") Description
        textarea#description(name="description", rows="5", placeholder="Description", class="w-full p-2 border rounded dark:bg-zinc-800 dark:border-zinc-700") #{book.description}

        button(type="submit", class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded") Save Changes
