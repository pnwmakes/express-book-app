extends layout

block content
  h2.text-3xl.font-bold.mb-6.text-center Edit Book

  .form-wrapper.flex.justify-center
    .form-card(class="bg-white dark:bg-zinc-900 shadow-md rounded-lg p-6")
      form(action=`/edit-book/${book._id}`, method="POST", class="space-y-4")
        input(type="text", name="title", value=book.title, required, class="w-full p-2 rounded border dark:bg-zinc-800 dark:border-zinc-700")
        input(type="text", name="author", value=book.author, required, class="w-full p-2 rounded border dark:bg-zinc-800 dark:border-zinc-700")
        input(type="text", name="isbn", value=book.isbn, required, class="w-full p-2 rounded border dark:bg-zinc-800 dark:border-zinc-700")
        button(type="submit", class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded") Update Book
