extends layout

block content
  .max-w-2xl.mx-auto.p-6
    .book-card(class="bg-white dark:bg-zinc-900 shadow-md rounded-lg p-6")
      h2(class="text-2xl font-bold mb-4")= book.title

      p(class="text-lg mb-2 text-gray-700 dark:text-gray-300") Author: #{book.author}
      p(class="text-lg mb-2 text-gray-600 dark:text-gray-400") ISBN: #{book.isbn}

      a(href="/", class="inline-block mt-4 text-blue-600 hover:underline") Back to List
